<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="vh-10">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expand="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to(user_path(current_user.id), class: "nav-link text-light") do %>
                    <span><i class="fas fa-home"></i> Home</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(users_path, class: "nav-link text-light") do %>
                    <span><i class="fas fa-users"></i> Users</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(books_path, class: "nav-link text-light") do %>
                    <span><i class="fas fa-book-open"></i> Books</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(destroy_user_session_path, method: :delete, class: "nav-link text-light") do %>
                    <span><i class="fas fa-sign-out-alt"></i> Log out</span>
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to("/", class: "nav-link text-light") do %>
                    <span><i class="fas fa-home"></i> Home</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(about_path, class: "nav-link text-light") do %>
                    <span><i class="fas fa-link"></i> About</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(new_user_registration_path, class: "nav-link text-light") do %>
                    <span><i class="fas fa-user-plus"></i> Sign up</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to(new_user_session_path, class: "nav-link text-light") do %>
                    <span><i class="fas fa-sign-in-alt"></i> Log in</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
