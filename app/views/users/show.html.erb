<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(165,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to(edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block") do %>
          <span><i class="fas fa-user-cog"></i></span>
        <% end %>
      </div>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book </h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <% if book.user_id == @user.id %>
          <tr>
            <th><%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image(165,100) %>
                <% end %></th>
            <th><%= link_to book_path(book.id) do %>
                  <%= book.title %><% end %></th>
            <th><%= book.body %></th>
          </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
